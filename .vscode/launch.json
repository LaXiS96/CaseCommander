{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // https://web.archive.org/web/20190504094943/https://marcelball.ca/projects/cortex-debug/
        {
            "name": "Cortex-Debug OpenOCD Launch",
            "cwd": "${workspaceRoot}/firmware",
            "executable": "./CaseCommander.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "./openocd.cfg"
            ],
            "swoConfig": {
                "enabled": true,
                "source": "probe",
                "swoFrequency": 2000000,
                "cpuFrequency": 72000000,
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "SWO output",
                        "encoding": "ascii"
                    }
                ]
            }
        },
        {
            "name": "Cortex-Debug JLink Launch",
            "cwd": "${workspaceRoot}/firmware",
            "executable": "./CaseCommander.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "STM32F103C8",
            "interface": "swd",
            "swoConfig": {
                "enabled": true,
                "source": "probe",
                "swoFrequency": 2000000,
                "cpuFrequency": 72000000,
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "SWO output",
                        "encoding": "ascii"
                    }
                ]
            }
        },
        {
            "name": "Cortex-Debug JLink Attach",
            "cwd": "${workspaceRoot}/firmware",
            "executable": "./CaseCommander.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "STM32F103C8",
            "interface": "swd",
            "swoConfig": {
                "enabled": true,
                "source": "probe",
                "swoFrequency": 2000000,
                "cpuFrequency": 72000000,
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "SWO output",
                        "encoding": "ascii"
                    }
                ]
            }
        }
    ]
}